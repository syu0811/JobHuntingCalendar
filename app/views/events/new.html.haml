%h1
  イベント追加
.single-container
  = form_with(model: @event, url: events_path, local: true) do |f|
    - if f.object.errors.any?
      .alert-warning
        %ul
        - f.object.errors.full_messages.each do |message|
          %li
            = message
    .form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    .form-group
      = f.label :year
      = f.select :year, options_for_select((2000..2100).to_a), { include_blank: '選択してください'}, { class: 'form-control' , required: true }
    .form-group
      = f.label :month
      = f.select :month, options_for_select((1..12).to_a), { include_blank: '選択してください'}, { class: 'form-control' , required: true }
    .form-group
      = f.label :day
      = f.select :day, options_for_select((1..31).to_a), { include_blank: '選択してください'}, { class: 'form-control' , required: true }
    .form-group
      = f.label :company_id
      = f.collection_select :company_id, Company.where(user: current_user), :id, :name, include_blank: "選択して下さい"
    .form-group
      = f.label :url
      = f.text_field :url, class: 'form-control'
    .form-group
      = f.submit nil, class: 'btn btn-success'